{
    "name": "scilla",
    "displayName": "scilla",
    "description": "Smart Contract Intermediate Level Language",
    "version": "0.4.1",
    "author": {
        "name": "as1ndu",
        "url": "https://github.com/as1ndu/scilla"
    },
    "repository": {
        "url": "https://github.com/as1ndu/scilla"
    },
    "icon": "themes/logo-128x128.png",
    "galleryBanner": {
        "color": "#23a5a8"
    },
    "publisher": "as1ndu",
    "keywords": [
        "scilla",
        "blockchain",
        "zilliqa",
        "smart-contracts"
    ],
    "engines": {
        "vscode": "^1.32.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
		"@types/node": "^10.12.18",
		"tslint": "^5.11.1",
		"typescript": "^3.2.4",
		"vscode": "^1.1.27"
	},
    "contributes": {
        "languages": [
            {
                "id": "scilla",
                "aliases": [
                    "scilla",
                    "scilla"
                ],
                "extensions": [
                    ".scilla",
                    ".scillib"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "scilla",
                "scopeName": "source.scilla",
                "path": "./syntaxes/scilla.tmLanguage.json"
            }
        ],
        "themes": [
            {
                "id": "scilla",
                "label": "scilla",
                "path": "./themes/scilla-color-theme.json",
                "uiTheme": "vs-dark"
            }
        ],
        "iconThemes": [
            {
                "id": "scilla",
                "label": "scilla",
                "path": "./themes/scilla-icon-theme.json"
            }
        ],
        "snippets": [
            {
                "language": "scilla",
                "path": "./snippets.json"
            }
        ]
    }
}
