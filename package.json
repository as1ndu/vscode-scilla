{
    "name": "scilla",
    
    "displayName": "scilla",

    "description": "Smart Contract Intermediate Level Language",

    "version": "0.5.2",

    "author": {
        "name": "as1ndu",
        "url": "https://github.com/as1ndu/scilla"
    },

    "repository": {
        "url": "https://github.com/as1ndu/scilla"
    },

    "icon": "themes/logo-128x128.png",

    "galleryBanner": {
        "color": "#23a5a8"
    },

    "publisher": "as1ndu",

    "keywords": [
        "scilla",
        "blockchain",
        "zilliqa",
        "smart-contracts"
    ],

    "engines": {
        "vscode": "^1.32.0"
    },

    "categories": [
        "Programming Languages",
        "Snippets"
    ],

    "activationEvents": [
        "onLanguage:scilla"
    ],

    "main": "./out/extension.js",

    "contributes": {
        "languages": [
            {
                "id": "scilla",
                "aliases": [
                    "scilla",
                    "scilla"
                ],
                "extensions": [
                    ".scilla",
                    ".scillib"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "scilla",
                "scopeName": "source.scilla",
                "path": "./syntaxes/scilla.tmLanguage.json"
            }
        ],
        "iconThemes": [
            {
                "id": "scilla",
                "label": "scilla",
                "path": "./themes/scilla-icon-theme.json"
            }
        ],
        "snippets": [
            {
                "language": "scilla",
                "path": "./snippets.json"
            }
        ]
    },

    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },

    "devDependencies": {
        "@types/node": "^10.14.6",
        "tslint": "^5.16.0",
        "typescript": "^3.4.5",
        "vscode": "^1.1.27"
    }
}
