{
    "name": "scilla",
    "displayName": "scilla",
    "description": "Smart Contract Intermediate Level Language",
    "license": "MIT",
    "version": "1.3.0",
    "author": {
        "name": "as1ndu",
        "url": "https://github.com/as1ndu/scilla"
    },
    "repository": {
        "url": "https://github.com/as1ndu/scilla"
    },
    "icon": "themes/logo-128x128.png",
    "galleryBanner": {
        "color": "#23a5a8"
    },
    "publisher": "as1ndu",
    "keywords": [
        "scilla",
        "blockchain",
        "zilliqa",
        "smart-contracts"
    ],
    "engines": {
        "vscode": "^1.32.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "activationEvents": [
        "onLanguage:scilla"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "menus": {
            "commandPalette": [
                {
                    "command": "scilla.CashFlowAnalyser",
                    "when": "editorLangId == scilla"
                }
            ]
        },
        "configuration": {
            "title": "Scilla configurations",
            "properties": {
                "scilla.pathToBinaries": {
                    "type": "string",
                    "default": "empty",
                    "description": "The absolute path to the locally compiled scilla binaries."
                },
                "scilla.pathToStandardLib": {
                    "type": "string",
                    "default": "empty",
                    "description": "The absolute path to the standard lib"
                },
                "scilla.gasLimit": {
                    "type": "number",
                    "default": 1000,
                    "description": "Gas limit for the your scilla contracts"
                },
                "scilla.cfaTag": {
                    "type": "array",
                    "default": [],
                    "description": "Variables to consider as cash during cash flow analysis."
                },
                "scilla.remoteDebugging": {
                    "type": "boolean",
                    "default": true,
                    "description": "Use a remote instance to debuge scilla files. No need to compile scilla files"
                }
            }
        },
        "commands": [
            {
                "command": "scilla.CashFlowAnalyser",
                "title": "Scilla: Cash Flow Analyser"
            },
            {
                "command": "scilla.ModifyGasLimit",
                "title": "Scilla: Set Gas Limit for Scilla"
            },
            {
                "command": "scilla.modifyScillaBinaryLocation",
                "title": "Scilla: Set location for Scilla binaries"
            },
            {
                "command": "scilla.modifySTDLIBLocation",
                "title": "Scilla: Set location for Scilla's standard library"
            }
        ],
        "languages": [
            {
                "id": "scilla",
                "aliases": [
                    "scilla",
                    "scilla"
                ],
                "extensions": [
                    ".scilla",
                    ".scillib"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "scilla",
                "scopeName": "source.scilla",
                "path": "./syntaxes/scilla.tmLanguage.json"
            }
        ],
        "iconThemes": [
            {
                "id": "scilla",
                "label": "scilla",
                "path": "./themes/scilla-icon-theme.json"
            }
        ],
        "snippets": [
            {
                "language": "scilla",
                "path": "./snippets.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "@types/node": "^10.14.6",
        "tslint": "^5.16.0",
        "typescript": "^3.4.5",
        "vscode": "^1.1.27"
    },
    "dependencies": {
        "check-os": "^1.0.1",
        "node-cmd": "^3.0.0"
    }
}
