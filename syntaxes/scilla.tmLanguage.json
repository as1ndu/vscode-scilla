{	"name": "scilla",
	"patterns": [
        {"include": "#main"}
    ],
	"repository": {
        "main": {
            "patterns":[
                {
                    "match": "\\b(let|library|import|contract|event|field|send|fun|transition|match|end|with|builtin)\\b",
                    "name" : "keyword.control.scilla"
                },
                {
                    "match": "^(\\(\\*.+)\\\\*\\)$",
                    "name" : "comment.block.documentation.scilla"
                },
                {
                    "match": "\\b(String|Uint32|Uint64|Uint128|Uint256|Int32|Int64|Int128|Int256|Map|True|False|ByStr20|ByStr32|BNum|Option|None|Bool|Some|List|Cons|Pair|type|scilla_version|Zero|Succ)\\b",
                    "name" : "storage.type.scilla"
                },
                {
                    "match": "\\b(eq|add|sub|mul|div|rem|lt|blt|in|scilla\\_version)\\b",
                    "name" : "keyword.operator.scilla"
                },
                {
                    "match": "({|}|:|;|=|-|\"|<|>|\\[|\\]|\\||\\(|\\)|\\')",
                    "name" : "punctuation.scilla"
                },
                {
                    "name" : "string.quoted.double.scilla",
                    "begin": "\"",
                    "end": "\""
                }

            ]
        }
	},
	"scopeName": "source.scilla"
}