{	"name": "scilla",
	"patterns": [
        {"include": "#main"}
    ],
	"repository": {
        "main": {
            "patterns":[
                {
                    "match": "\\b(let|contains|delete|put|remove|library|import|contract|event|field|send|fun|transition|match|end|with|builtin)\\b",
                    "name" : "keyword.control.scilla"
                },
                {
                    "match": "([\\(\\*].*(?:\\*\\)))",
                    "name" : "comment.block.documentation.scilla"
                },
                {
                    "match": "\\b(String|Uint32|Uint64|Uint128|Uint256|Int32|Int64|Int128|Int256|Map|True|False|ByStr20|ByStr32|ByStr64|ByStr33|BNum|Option|None|Bool|Some|List|Cons|Pair|type|scilla_version|Zero|Succ)\\b",
                    "name" : "storage.type.scilla"
                },
                {
                    "match": "\\b(eq|add|sub|mul|div|rem|lt|blt|in|scilla\\_version|substr|sha256hash|keccak256hash|ripemd160hash|to\\_byStr|to\\_nat|pow|to\\_uint256|to\\_uint32|to\\_uint64|to\\_uint128|to\\_int256|to\\_int32|to\\_int64|to\\_list|to\\_int128|schnorr\\_verify|concat)\\b",
                    "name" : "keyword.operator.scilla"
                },
                {
                    "match": "(@|{|}|:|;|=|-|\"|<|>|\\[|\\]|\\||\\(|\\)|\\')",
                    "name" : "punctuation.scilla"
                },
                {
                    "name" : "string.quoted.double.scilla",
                    "begin": "\"",
                    "end": "\""
                }

            ]
        }
	},
	"scopeName": "source.scilla"
}